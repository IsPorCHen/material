<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Темная тема - цвета из таблицы PDF -->
    
    <!-- Фон окна приложения -->
    <SolidColorBrush x:Key="AppBackground" Color="#1E2A32"/>
    
    <!-- Основные панели, карточки -->
    <SolidColorBrush x:Key="PanelBackground" Color="#2A3C46"/>
    
    <!-- Заголовки и подписи -->
    <SolidColorBrush x:Key="HeaderForeground" Color="#D6F4FF"/>
    
    <!-- Основной текст -->
    <SolidColorBrush x:Key="AppForeground" Color="#E4E8EB"/>
    
    <!-- Вторичный текст / подсказки -->
    <SolidColorBrush x:Key="SecondaryForeground" Color="#A1B4BF"/>
    
    <!-- Основные кнопки (действия) -->
    <SolidColorBrush x:Key="PrimaryButtonBackground" Color="#33B8B1"/>
    <SolidColorBrush x:Key="PrimaryButtonHover" Color="#2A9E98"/>
    <SolidColorBrush x:Key="PrimaryButtonPressed" Color="#21847F"/>
    
    <!-- Опасные кнопки (удалить, сброс) -->
    <SolidColorBrush x:Key="DangerButtonBackground" Color="#E65A4F"/>
    <SolidColorBrush x:Key="DangerButtonHover" Color="#D44A40"/>
    <SolidColorBrush x:Key="DangerButtonPressed" Color="#C23A31"/>
    
    <!-- Поля ввода (фон) -->
    <SolidColorBrush x:Key="TextBoxBackground" Color="#324650"/>
    
    <!-- Границы полей ввода -->
    <SolidColorBrush x:Key="TextBoxBorder" Color="#3C4D55"/>
    
    <!-- Акцент (выделение, активный элемент) -->
    <SolidColorBrush x:Key="AccentColor" Color="#4FC3C7"/>
    
    <!-- Ошибки валидации (фон) -->
    <SolidColorBrush x:Key="ValidationErrorBackground" Color="#3B1E1E"/>
    
    <!-- Ошибки валидации (граница) -->
    <SolidColorBrush x:Key="ValidationErrorBorder" Color="#FFB3B3"/>
    
    <!-- Ошибки валидации (текст) -->
    <SolidColorBrush x:Key="ValidationErrorForeground" Color="#FFB3B3"/>
    
    <!-- Разделители и границы -->
    <SolidColorBrush x:Key="SeparatorBorder" Color="#3C4D55"/>
    
    <!-- Дополнительные элементы -->
    <SolidColorBrush x:Key="ButtonForeground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="GroupBoxBorder" Color="#3C4D55"/>
    <SolidColorBrush x:Key="ListViewBorder" Color="#3C4D55"/>
    
</ResourceDictionary>
